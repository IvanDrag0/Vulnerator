<UserControl x:Class="Vulnerator.View.UI.ConfigurationManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Converters="clr-namespace:Vulnerator.View.Converter"
             xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:LiveCharts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:Vulnerator.View.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:v="clr-namespace:Vulnerator.View"
             xmlns:validation="clr-namespace:Vulnerator.View.Validation"
             xmlns:vh="clr-namespace:Vulnerator.View.ViewHelper"
             xmlns:vm="clr-namespace:Vulnerator.ViewModel"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="800"
             d:DesignWidth="800"
             DataContext="{Binding ConfigurationManagement, Source={StaticResource Locator}}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:BooleanToCheckboxConverter x:Key="CheckboxConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Controls:MetroAnimatedSingleRowTabControl Controls:TabControlHelper.Underlined="SelectedTabItem">
            <TabItem Header="Hardware"
                     Style="{StaticResource CustomMetroTabItem}">
                <Grid Margin="{StaticResource MarginLeftRightBottom5}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding Hardwares}"
                                  SelectedItem="{Binding SelectedHardware}"
                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn x:Name="hardwareCheckBoxColumn"
                                                        Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="{StaticResource MarginLeft5}"
                                                      HorizontalAlignment="Center"
                                                      IsChecked="{Binding IsChecked}"
                                                      Style="{StaticResource CustomCheckBox}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding DisplayedHostName}"
                                                    Header="Preferred Host Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource HeaderedTextBoxStyle}"
                                               TargetType="TextBox">
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="Preferred Host Name" />
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="vh:DependencyProperties.FloatingWatermarkForeground" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding FQDN}"
                                                    Header="FQDN"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource HeaderedTextBoxStyle}"
                                               TargetType="TextBox">
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="FQDN" />
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="vh:DependencyProperties.FloatingWatermarkForeground" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding NetBIOS}"
                                                    Header="NetBIOS"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource HeaderedTextBoxStyle}"
                                               TargetType="TextBox">
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="NetBIOS" />
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="vh:DependencyProperties.FloatingWatermarkForeground" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding ScanIP}"
                                                    Header="Last Scan IP"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource HeaderedTextBoxStyle}"
                                               TargetType="TextBox">
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="Scan IP" />
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="vh:DependencyProperties.FloatingWatermarkForeground" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding ElementName=hardwareCheckBoxColumn, Path=ActualWidth}" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Column="1"
                                                 Margin="0,0,5,5"
                                                 Controls:TextBoxHelper.Watermark="Scan Host Name"
                                                 vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                 Style="{StaticResource HeaderedTextBoxStyle}"
                                                 Text="{Binding DiscoveredHostName}" />
                                        <TextBox Grid.Column="2"
                                                 Margin="5,0,5,5"
                                                 Controls:TextBoxHelper.Watermark="Last Scan Date (Read Only)"
                                                 vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                 IsReadOnly="True"
                                                 Style="{StaticResource HeaderedTextBoxStyle}"
                                                 Text="" />
                                        <TextBox Grid.Column="3"
                                                 Margin="5,0,5,5"
                                                 Controls:TextBoxHelper.Watermark="Uncredentialed - 21745 (Read Only)"
                                                 vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                 IsReadOnly="True"
                                                 Style="{StaticResource HeaderedTextBoxStyle}"
                                                 Text="{Binding Found21745}" />
                                        <TextBox Grid.Column="4"
                                                 Margin="5,0,5,5"
                                                 Controls:TextBoxHelper.Watermark="Uncredentialed - 26917 (Read Only)"
                                                 vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                 IsReadOnly="True"
                                                 Style="{StaticResource HeaderedTextBoxStyle}"
                                                 Text="{Binding Found26917}" />
                                        <DataGrid Grid.Row="1"
                                                  Grid.Column="1"
                                                  Height="100"
                                                  Margin="0,0,5,5"
                                                  VerticalAlignment="Top"
                                                  CanUserAddRows="False"
                                                  ItemsSource="{Binding IP_Addresses}"
                                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding IP_Address}"
                                                                    Header="IP Addresses"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid Grid.Row="1"
                                                  Grid.Column="2"
                                                  Height="100"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Top"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  ItemsSource="{Binding MAC_Addresses}"
                                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding MAC_Address}"
                                                                    Header="MAC Addresses"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid Grid.Row="1"
                                                  Grid.Column="3"
                                                  Height="100"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Top"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  ItemsSource="{Binding Groups}"
                                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding Name}"
                                                                    Header="Associated Groups"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid Grid.Row="1"
                                                  Grid.Column="4"
                                                  Height="100"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Top"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  ItemsSource="{Binding Contacts}"
                                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding First_Name}"
                                                                    Header="First Name"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding Last_Name}"
                                                                    Header="Last Name"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding Email}"
                                                                    Header="Email"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <ComboBox Grid.Row="2"
                                                  Grid.Column="1"
                                                  Margin="0,0,5,5"
                                                  VerticalAlignment="Bottom"
                                                  Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                                  Controls:TextBoxHelper.ButtonContent="{IconPacks:Material Kind=PlusBoxOutline}"
                                                  Controls:TextBoxHelper.ClearTextButton="True"
                                                  Controls:TextBoxHelper.Watermark="Add IP Address"
                                                  vh:DependencyProperties.FloatingWatermark="IP Address"
                                                  vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                  DisplayMemberPath="IP_Address"
                                                  ItemsSource="{Binding Path=DataContext.IpAddresses, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                  Style="{StaticResource HeaderedComboBoxStyle}" />
                                        <ComboBox Grid.Row="2"
                                                  Grid.Column="2"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Bottom"
                                                  Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                                  Controls:TextBoxHelper.ButtonContent="{IconPacks:Material Kind=PlusBoxOutline}"
                                                  Controls:TextBoxHelper.ClearTextButton="True"
                                                  Controls:TextBoxHelper.Watermark="Add MAC Address"
                                                  vh:DependencyProperties.FloatingWatermark="MAC Address"
                                                  vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                  DisplayMemberPath="MAC_Address"
                                                  ItemsSource="{Binding Path=DataContext.MacAddresses, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                  Style="{StaticResource HeaderedComboBoxStyle}" />
                                        <ComboBox Grid.Row="2"
                                                  Grid.Column="3"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Bottom"
                                                  Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                                  Controls:TextBoxHelper.ButtonContent="{IconPacks:Material Kind=PlusBoxOutline}"
                                                  Controls:TextBoxHelper.ClearTextButton="True"
                                                  Controls:TextBoxHelper.Watermark="Add Associated Group"
                                                  vh:DependencyProperties.FloatingWatermark="Group"
                                                  vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                  DisplayMemberPath="Name"
                                                  IsEditable="True"
                                                  ItemsSource="{Binding Path=DataContext.Groups, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                  Style="{StaticResource HeaderedComboBoxStyle}" />
                                        <ComboBox Grid.Row="2"
                                                  Grid.Column="4"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Bottom"
                                                  Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                                  Controls:TextBoxHelper.ButtonContent="{IconPacks:Material Kind=PlusBoxOutline}"
                                                  Controls:TextBoxHelper.ClearTextButton="True"
                                                  Controls:TextBoxHelper.Watermark="Add Associated Contact"
                                                  vh:DependencyProperties.FloatingWatermark="Contact"
                                                  vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                  ItemsSource="{Binding Path=DataContext.Contacts, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                  Style="{StaticResource HeaderedComboBoxStyle}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width=".25*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding First_Name}" />
                                                            <TextBlock Text=" " />
                                                            <TextBlock Text="{Binding Last_Name}" />
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="2"
                                                                   Text="{Binding Email}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <DataGrid Grid.Row="3"
                                                  Grid.Column="1"
                                                  Grid.ColumnSpan="4"
                                                  Height="100"
                                                  Margin="0,0,5,5"
                                                  VerticalAlignment="Top"
                                                  CanUserAddRows="False"
                                                  CanUserDeleteRows="False"
                                                  IsReadOnly="True"
                                                  ItemsSource="{Binding HardwarePortsProtocols}"
                                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding PP.Port}"
                                                                    Header="Port"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding PP.Protocol}"
                                                                    Header="Protocol"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding DiscoveredService}"
                                                                    Header="Discovered Service Name"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding DisplayService}"
                                                                    Header="Preferred Service Name"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTemplateColumn Width="Auto"
                                                                        Header="Report in Accreditation"
                                                                        HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <IconPacks:PackIconMaterial HorizontalAlignment="Center"
                                                                                        Kind="{Binding ReportInAccreditation, Converter={StaticResource CheckboxConverter}}"
                                                                                        ToolTip="{Binding ReportInAccreditation}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid Grid.Row="4"
                                                  Grid.Column="1"
                                                  Grid.ColumnSpan="2"
                                                  Height="100"
                                                  Margin="0,0,5,5"
                                                  VerticalAlignment="Stretch"
                                                  CanUserAddRows="False"
                                                  CanUserDeleteRows="False"
                                                  IsReadOnly="True"
                                                  ItemsSource="{Binding SoftwareHardwares}"
                                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding Software.DisplayedSoftwareName}"
                                                                    Header="Preferred Software Name"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTextColumn Width="Auto"
                                                                    Binding="{Binding Software.SoftwareVersion}"
                                                                    Header="Version"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTemplateColumn Width="Auto"
                                                                        Header="OS / Firmware"
                                                                        HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}"
                                                                        SortMemberPath="Is_OS_Or_Firmware">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <IconPacks:PackIconMaterial HorizontalAlignment="Center"
                                                                                        Kind="{Binding Software.Is_OS_Or_Firmware, Converter={StaticResource CheckboxConverter}}"
                                                                                        ToolTip="{Binding Software.Is_OS_Or_Firmware}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <DataGrid Grid.Row="4"
                                                  Grid.Column="3"
                                                  Grid.ColumnSpan="2"
                                                  Height="100"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Top"
                                                  CanUserAddRows="False"
                                                  CanUserDeleteRows="False"
                                                  IsReadOnly="True"
                                                  ItemsSource="{Binding VulnerabilitySources}"
                                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="*"
                                                                    Binding="{Binding SourceName}"
                                                                    Header="Associated STIGs"
                                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                                <DataGridTemplateColumn Width="Auto">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Margin="5"
                                                                    Command="{Binding DataContext.GenerateCklCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=SelectedItem}">
                                                                <IconPacks:PackIconMaterial Width="12"
                                                                                            Height="12"
                                                                                            Kind="Export" />
                                                            </Button>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <ComboBox Grid.Row="5"
                                                  Grid.Column="1"
                                                  Grid.ColumnSpan="2"
                                                  Margin="0,0,5,5"
                                                  VerticalAlignment="Bottom"
                                                  Controls:TextBoxHelper.ButtonCommand="{Binding}"
                                                  Controls:TextBoxHelper.ButtonContent="{IconPacks:Material Kind=PlusBoxOutline}"
                                                  Controls:TextBoxHelper.ClearTextButton="True"
                                                  Controls:TextBoxHelper.Watermark="Add Associated Software"
                                                  vh:DependencyProperties.FloatingWatermark="Software"
                                                  vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                  DisplayMemberPath="DisplayedSoftwareName"
                                                  ItemsSource="{Binding Path=DataContext.Softwares, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                  Style="{StaticResource HeaderedComboBoxStyle}" />
                                        <ComboBox Grid.Row="5"
                                                  Grid.Column="3"
                                                  Grid.ColumnSpan="2"
                                                  Margin="5,0,5,5"
                                                  VerticalAlignment="Bottom"
                                                  Controls:TextBoxHelper.ButtonCommand="{Binding Path=DataContext.AssociateStigToHardwareCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                  Controls:TextBoxHelper.ButtonContent="{IconPacks:Material Kind=PlusBoxOutline}"
                                                  Controls:TextBoxHelper.ClearTextButton="True"
                                                  Controls:TextBoxHelper.Watermark="Add Associated Checklist"
                                                  vh:DependencyProperties.FloatingWatermark="Checklist"
                                                  vh:DependencyProperties.FloatingWatermarkForeground="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}"
                                                  DisplayMemberPath="SourceName"
                                                  ItemsSource="{Binding Path=DataContext.VulnerabilitySources, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                  SelectedItem="{Binding Path=DataContext.SelectedVulnerabilitySource, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Style="{StaticResource HeaderedComboBoxStyle}" />
                                    </Grid>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </DataGrid>
                        <ScrollViewer Grid.Row="1"
                                      Margin="{StaticResource MarginTop5}"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <Grid HorizontalAlignment="Stretch"
                                  DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       VerticalAlignment="Bottom">
                                    <TextBlock Text="Count:"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                                <Label Grid.Column="1"
                                       VerticalAlignment="Bottom">
                                    <TextBlock Text="{Binding Hardwares.Count}"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                                <Button Grid.Column="3"
                                        HorizontalAlignment="Right"
                                        Command="{Binding}"
                                        Content="Clear Selected Hardware" />
                                <Button Grid.Column="4"
                                        Margin="{StaticResource MarginLeft5}"
                                        HorizontalAlignment="Right"
                                        Command="{Binding}"
                                        Content="Delete Selected Hardware" />
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                    <Expander Grid.Column="1"
                              Background="{DynamicResource WindowBackgroundBrush}"
                              BorderThickness="0"
                              ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconFontAwesomeLight Grid.Column="0"
                                                                        Margin="{StaticResource MarginAll5}"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Kind="PlusSquare" />
                                    <TextBlock Grid.Column="1"
                                               Style="{StaticResource ExpanderHeaderTextBlockStyle}"
                                               Text="Add / Update" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBox Controls:TextBoxHelper.Watermark="Discovered Host Name (Read Only)"
                                         vh:DependencyProperties.FloatingWatermark="Discovered Host Name"
                                         IsReadOnly="True"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <TextBox Controls:TextBoxHelper.Watermark="Preferred Host Name"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <TextBox Controls:TextBoxHelper.Watermark="FQDN (Read Only)"
                                         vh:DependencyProperties.FloatingWatermark="FQDN"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <TextBox Controls:TextBoxHelper.Watermark="NetBIOS Name (Read Only)"
                                         vh:DependencyProperties.FloatingWatermark="NetBIOS Name"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <TextBox Controls:TextBoxHelper.Watermark="Scan IP (Read Only)"
                                         vh:DependencyProperties.FloatingWatermark="Scan IP"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <DataGrid MinHeight="100"
                                          Margin="{StaticResource MarginTop5}"
                                          Style="{StaticResource GreyBorderedDataGridStyle}">
