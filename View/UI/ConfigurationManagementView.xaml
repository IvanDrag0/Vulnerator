<UserControl x:Class="Vulnerator.View.UI.ConfigurationManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Converters="clr-namespace:Vulnerator.View.Converter"
             xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:LiveCharts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:Vulnerator.View.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:v="clr-namespace:Vulnerator.View"
             xmlns:validation="clr-namespace:Vulnerator.View.Validation"
             xmlns:vh="clr-namespace:Vulnerator.View.ViewHelper"
             xmlns:vm="clr-namespace:Vulnerator.ViewModel"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignWidth="800"
             DataContext="{Binding ConfigurationManagement, Source={StaticResource Locator}}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:BooleanToCheckboxConverter x:Key="CheckboxConverter" />
        <Converters:IsNullToCollapsedConverter x:Key="IsNullToCollapsedConverter" />

        <DataTemplate x:Key="PpsItemTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Protocol}" />
                <TextBlock Text=" " />
                <TextBlock Text="{Binding Port}" />
                <TextBlock Text=": " />
                <TextBlock Text="{Binding DisplayedServiceName}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PpsTemplate">
            <ContentPresenter x:Name="Presenter"
                              Content="{Binding}"
                              ContentTemplate="{StaticResource PpsItemTemplate}" />
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, ComboBoxItem, 1}}"
                             Value="{x:Null}">
                    <Setter TargetName="Presenter" Property="ContentTemplate" Value="{StaticResource PpsItemTemplate}" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MahApps.Brushes.Window.Background}">
        <Controls:MetroAnimatedSingleRowTabControl Controls:TabControlHelper.Underlined="SelectedTabItem">
            <TabItem Header="Groups"
                     Style="{StaticResource CustomMetroTabItem}">
                <Grid Margin="{StaticResource MarginAll5}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding Groups}"
                                  SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn x:Name="projectsCheckBoxColumn"
                                                        Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="{StaticResource MarginLeft5}"
                                                      HorizontalAlignment="Center"
                                                      IsChecked="{Binding IsChecked}"
                                                      Style="{StaticResource CustomCheckBox}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding GroupName}"
                                                    Header="Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MahApps.Styles.TextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding GroupAcronym}"
                                                    Header="Acronym"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MahApps.Styles.TextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding GroupTier}"
                                                    Header="Tier"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MahApps.Styles.TextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Hardwares.Count}"
                                                    Header="Asset Count"
                                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MahApps.Styles.TextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Width="Auto"
                                                        Header="Is Accreditation"
                                                        HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}"
                                                        SortMemberPath="IsAccreditation">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <IconPacks:PackIconFontAwesomeLight HorizontalAlignment="Center"
                                                                                Kind="{Binding IsAccreditation, Converter={StaticResource CheckboxConverter}}"
                                                                                ToolTip="{Binding IsAccreditation}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <ScrollViewer Grid.Row="1"
                                      Margin="{StaticResource MarginTop5}"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       VerticalAlignment="Center">
                                    <TextBlock Text="Count:"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                                <Label Grid.Column="1"
                                       VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Groups.Count}"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                                <Button Grid.Column="3"
                                        HorizontalAlignment="Right"
                                        Command="{Binding ClearSelectedGroupCommand}"
                                        Content="Clear Selected Group" />
                                <Button Grid.Column="4"
                                        Margin="{StaticResource MarginLeft5}"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DeleteGroupCommand}"
                                        Content="Delete Selected Group" />
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                    <Expander Grid.Column="1"
                              Background="{DynamicResource MahApps.Brushes.Window.Background}"
                              BorderThickness="0"
                              ExpandDirection="Right"
                              Style="{StaticResource CustomExpander}">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconFontAwesomeLight Grid.Column="0"
                                                                        Margin="{StaticResource MarginAll5}"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Kind="PlusSquare" />
                                    <TextBlock Grid.Column="1"
                                               Style="{StaticResource ExpanderHeaderTextBlockStyle}"
                                               Text="Add / Update" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <StackPanel Width="200">
                                <TextBox Controls:TextBoxHelper.Watermark="Group Name"
                                         vh:DependencyProperties.AlternateValueTrigger="{Binding SelectedGroup}"
                                         vh:DependencyProperties.PrimaryValue="{Binding NewGroup.GroupName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         vh:DependencyProperties.SecondaryValue="{Binding SelectedGroup.GroupName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource HeaderedTextBoxStyle}"
                                         TextWrapping="Wrap" />
                                <TextBox Controls:TextBoxHelper.Watermark="Group Acronym"
                                         vh:DependencyProperties.AlternateValueTrigger="{Binding SelectedGroup}"
                                         vh:DependencyProperties.PrimaryValue="{Binding NewGroup.GroupAcronym, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         vh:DependencyProperties.SecondaryValue="{Binding SelectedGroup.GroupAcronym, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource HeaderedTextBoxStyle}"
                                         TextWrapping="Wrap" />
                                <TextBox Controls:TextBoxHelper.Watermark="Group Tier (Digits Only)"
                                         vh:DependencyProperties.AlternateValueTrigger="{Binding SelectedGroup}"
                                         vh:DependencyProperties.FloatingWatermark="Group Tier"
                                         vh:DependencyProperties.PrimaryValue="{Binding NewGroup.GroupTier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         vh:DependencyProperties.SecondaryValue="{Binding SelectedGroup.GroupTier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource HeaderedTextBoxStyle}"
                                         TextWrapping="Wrap" />
                                <DataGrid MinHeight="100"
                                          MaxHeight="300"
                                          Margin="{StaticResource MarginTop5}"
                                          ItemsSource="{Binding SelectedGroup.Hardwares}"
                                          Style="{StaticResource GreyBorderedDataGridStyle}"
                                          Visibility="{Binding SelectedGroup, Converter={StaticResource IsNullToCollapsedConverter}}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="*"
                                                            Binding="{Binding DisplayedHostName}"
                                                            Header="Associated Hardware"
                                                            HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Margin="{StaticResource MarginAll5}">
                                                        <IconPacks:PackIconFontAwesomeLight Width="14"
                                                                                            Height="14"
                                                                                            Kind="TrashAlt" />
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <ComboBox Controls:TextBoxHelper.ButtonCommand="{Binding AddHardwareToGroupCommand}"
                                          Controls:TextBoxHelper.ButtonContent="{IconPacks:FontAwesomeLight Kind=PlusSquare}"
                                          Controls:TextBoxHelper.ClearTextButton="True"
                                          Controls:TextBoxHelper.Watermark="Add Hardware"
                                          DisplayMemberPath="DisplayedHostName"
                                          ItemsSource="{Binding Hardwares}"
                                          SelectedItem="{Binding SelectedHardwareForGroupMapping, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                                          Style="{StaticResource HeaderedComboBoxStyle}"
                                          Visibility="{Binding SelectedGroup, Converter={StaticResource IsNullToCollapsedConverter}}" />
                                <Controls:ToggleSwitch x:Name="groupAccreditationToggleSwitch"
                                                       Margin="{StaticResource MarginTop5}"
                                                       HorizontalContentAlignment="Right"
                                                       vh:DependencyProperties.AlternateValueTrigger="{Binding SelectedGroup}"
                                                       vh:DependencyProperties.PrimaryValue="{Binding NewGroup.IsAccreditation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       vh:DependencyProperties.SecondaryValue="{Binding SelectedGroup.IsAccreditation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Content="Is Accreditation"
                                                       FontFamily="Segoe UI"
                                                       FontSize="12"
                                                       Style="{StaticResource Vulnerator.Styles.ToggleSwitch}" />
                                <TextBox Controls:TextBoxHelper.Watermark="eMASS ID (Digits Only)"
                                         vh:DependencyProperties.FloatingWatermark="eMASS ID"
                                         Style="{StaticResource HeaderedTextBoxStyle}"
                                         Text="{Binding SelectedGroup.Accreditation_eMASS_ID, Mode=TwoWay}"
                                         TextWrapping="Wrap"
                                         Visibility="{Binding ElementName=groupAccreditationToggleSwitch, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <Controls:ToggleSwitch Margin="{StaticResource MarginTop5}"
                                                       HorizontalContentAlignment="Right"
                                                       vh:DependencyProperties.AlternateValueTrigger="{Binding SelectedGroup}"
                                                       vh:DependencyProperties.PrimaryValue="{Binding NewGroup.IsPlatform, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       vh:DependencyProperties.SecondaryValue="{Binding SelectedGroup.IsPlatform, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Content="Is Platform"
                                                       FontFamily="Segoe UI"
                                                       FontSize="12"
                                                       Style="{StaticResource Vulnerator.Styles.ToggleSwitch}" />
                                <Button Margin="{StaticResource MarginTop5}"
                                        HorizontalAlignment="Center"
                                        Command="{Binding ModifyGroupCommand}"
                                        Content="Add/Update Group" />
                            </StackPanel>
                        </ScrollViewer>
                    </Expander>
                    <!--  TODO: Implement Bulk Process Expander  -->
                    <!--  TODO: Implement Filter Expander  -->
                </Grid>
            </TabItem>
            <TabItem Header="Hardware"
                     Style="{StaticResource CustomMetroTabItem}">
                <Grid Margin="{StaticResource MarginLeftRightBottom5}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding Hardwares}"
                                  SelectedItem="{Binding SelectedHardware}"
                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn x:Name="hardwareCheckBoxColumn"
                                                        Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="{StaticResource MarginLeft5}"
                                                      HorizontalAlignment="Center"
                                                      IsChecked="{Binding IsChecked}"
                                                      Style="{StaticResource CustomCheckBox}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding DisplayedHostName}"
                                                    Header="Preferred Host Name"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding FQDN}"
                                                    Header="FQDN"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding NetBIOS}"
                                                    Header="NetBIOS"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding ScanIP}"
                                                    Header="Last Scan IP"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <ScrollViewer Grid.Row="1"
                                      Margin="{StaticResource MarginTop5}"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <Grid HorizontalAlignment="Stretch"
                                  DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       VerticalAlignment="Bottom">
                                    <TextBlock Text="Count:"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                                <Label Grid.Column="1"
                                       VerticalAlignment="Bottom">
                                    <TextBlock Text="{Binding Hardwares.Count}"
                                               TextTrimming="CharacterEllipsis" />
                                </Label>
                                <Button Grid.Column="3"
                                        HorizontalAlignment="Right"
                                        Command="{Binding}"
                                        Content="Clear Selected Hardware" />
                                <Button Grid.Column="4"
                                        Margin="{StaticResource MarginLeft5}"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DeleteHardwareCommand}"
                                        Content="Delete Selected Hardware" />
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                    <Expander Grid.Column="1"
                              Background="{DynamicResource MahApps.Brushes.Window.Background}"
                              BorderThickness="0"
                              ExpandDirection="Right"
                              Style="{StaticResource CustomExpander}">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconFontAwesomeLight Grid.Column="0"
                                                                        Margin="{StaticResource MarginAll5}"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Kind="PlusSquare"
                                                                        RotationAngle="270" />
                                    <TextBlock Grid.Column="1"
                                               Style="{StaticResource ExpanderHeaderTextBlockStyle}"
                                               Text="Add / Update" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBox Controls:TextBoxHelper.Watermark="Discovered Host Name (Read Only)"
                                         vh:DependencyProperties.FloatingWatermark="Discovered Host Name"
                                         IsReadOnly="True"
                                         Style="{StaticResource HeaderedTextBoxStyle}"
                                         Text="{Binding SelectedHardware.DiscoveredHostName, Mode=OneWay}"
                                         Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}" />
                                <TextBox Controls:TextBoxHelper.Watermark="Preferred Host Name"
                                         vh:DependencyProperties.AlternateValueTrigger="{Binding SelectedHardware}"
                                         vh:DependencyProperties.PrimaryValue="{Binding NewHardware.DisplayedHostName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         vh:DependencyProperties.SecondaryValue="{Binding EditableHardware.DisplayedHostName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <TextBox Controls:TextBoxHelper.Watermark="FQDN (Read Only)"
                                         vh:DependencyProperties.FloatingWatermark="FQDN"
                                         Style="{StaticResource HeaderedTextBoxStyle}"
                                         Text="{Binding SelectedHardware.FQDN, Mode=OneWay}"
                                         Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}" />
                                <TextBox Controls:TextBoxHelper.Watermark="NetBIOS Name (Read Only)"
                                         vh:DependencyProperties.FloatingWatermark="NetBIOS Name"
                                         Style="{StaticResource HeaderedTextBoxStyle}"
                                         Text="{Binding SelectedHardware.NetBIOS, Mode=OneWay}"
                                         Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}" />
                                <TextBox Controls:TextBoxHelper.Watermark="Scan IP"
                                         vh:DependencyProperties.AlternateValueTrigger="{Binding SelectedHardware}"
                                         vh:DependencyProperties.FloatingWatermark="Scan IP"
                                         vh:DependencyProperties.PrimaryValue="{Binding NewHardware.ScanIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         vh:DependencyProperties.SecondaryValue="{Binding EditableHardware.ScanIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource HeaderedTextBoxStyle}" />
                                <DataGrid MinHeight="100"
                                          Margin="{StaticResource MarginTop5}"
                                          ItemsSource="{Binding SelectedHardware.IP_Addresses}"
                                          Style="{StaticResource GreyBorderedDataGridStyle}"
                                          Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding IpAddress}"
                                                            Header="IP Address"
                                                            HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Margin="{StaticResource MarginAll5}"
                                                            Command="{Binding DataContext.RemoveIpAddressFromHardwareCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding IP_Address_ID}">
                                                        <IconPacks:PackIconFontAwesomeLight Width="14"
                                                                                            Height="14"
                                                                                            Kind="TrashAlt" />
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <ComboBox Controls:TextBoxHelper.ButtonCommand="{Binding AssociateIpAddressToHardwareCommand}"
                                          Controls:TextBoxHelper.ButtonContent="{IconPacks:FontAwesomeLight Kind=PlusSquare}"
                                          Controls:TextBoxHelper.ClearTextButton="True"
                                          Controls:TextBoxHelper.Watermark="Add IP"
                                          DisplayMemberPath="IpAddress"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          ItemsSource="{Binding IpAddresses}"
                                          Style="{StaticResource HeaderedComboBoxStyle}"
                                          Text="{Binding IpAddressForHardwareMapping, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          TextSearch.TextPath="IpAddress"
                                          Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}" />
                                <DataGrid MinHeight="100"
                                          Margin="{StaticResource MarginTop5}"
                                          ItemsSource="{Binding SelectedHardware.MAC_Addresses}"
                                          Style="{StaticResource GreyBorderedDataGridStyle}"
                                          Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding MacAddress}"
                                                            Header="MAC Address"
                                                            HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Margin="{StaticResource MarginAll5}">
                                                        <IconPacks:PackIconFontAwesomeLight Width="14"
                                                                                            Height="14"
                                                                                            Kind="TrashAlt" />
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <ComboBox Controls:TextBoxHelper.ButtonCommand="{Binding AssociateMacAddressToHardwareCommand}"
                                          Controls:TextBoxHelper.ButtonContent="{IconPacks:FontAwesomeLight Kind=PlusSquare}"
                                          Controls:TextBoxHelper.ClearTextButton="True"
                                          Controls:TextBoxHelper.Watermark="Add MAC"
                                          DisplayMemberPath="MacAddress"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          ItemsSource="{Binding MacAddresses}"
                                          Style="{StaticResource HeaderedComboBoxStyle}"
                                          Text="{Binding MacAddressForHardwareMapping, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                                          TextSearch.TextPath="MacAddress"
                                          Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}" />
                                <DataGrid MinHeight="100"
                                          MaxHeight="300"
                                          Margin="{StaticResource MarginTop5}"
                                          ItemsSource="{Binding SelectedHardware.Groups}"
                                          Style="{StaticResource GreyBorderedDataGridStyle}"
                                          Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="Auto"
                                                            Binding="{Binding GroupName}"
                                                            Header="Associated Groups"
                                                            HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Margin="{StaticResource MarginAll5}"
                                                            Command="{Binding DataContext.RemoveMacAddressFromHardwareCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding MAC_Address_ID}">
                                                        <IconPacks:PackIconFontAwesomeLight Width="14"
                                                                                            Height="14"
                                                                                            Kind="TrashAlt" />
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <ComboBox Controls:TextBoxHelper.ButtonCommand="{Binding AddGroupToHardwareCommand}"
                                          Controls:TextBoxHelper.ButtonContent="{IconPacks:FontAwesomeLight Kind=PlusSquare}"
                                          Controls:TextBoxHelper.ClearTextButton="True"
                                          Controls:TextBoxHelper.Watermark="Add Group"
                                          DisplayMemberPath="GroupName"
                                          ItemsSource="{Binding Groups}"
                                          SelectedItem="{Binding SelectedGroupForHardwareMapping, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                                          Style="{StaticResource HeaderedComboBoxStyle}"
                                          Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}" />
                                <DataGrid MinHeight="100"
                                          MaxHeight="300"
                                          Margin="{StaticResource MarginTop5}"
                                          ItemsSource="{Binding SelectedHardware.SoftwareHardwares}"
                                          Style="{StaticResource GreyBorderedDataGridStyle}"
                                          Visibility="{Binding SelectedHardware, Converter={StaticResource IsNullToCollapsedConverter}}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding Software.DisplayedSoftwareName}"
                                                            Header="Installed Software"
                                                            HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}" />
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Margin="{StaticResource MarginAll5}"
                                                            Command="{Binding DataContext.RemoveSoftwareFromHardwareCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding Software_ID}">
                                                        <IconPacks:PackIconFontAwesomeLight Width="14"
                                                                                            Height="14"
                                                                                            Kind="TrashAlt" />
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <ComboBox Controls:TextBoxHelper.ButtonCommand="{Binding AssociateSoftwareToHardwareCommand}"
                                          Controls:TextBoxHelper.ButtonContent="{IconPacks:FontAwesomeLight Kind=PlusSquare}"
                                          Controls:TextBoxHelper.ClearTextButton="True"
